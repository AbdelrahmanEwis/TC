<odoo>
    <data>
        <template id="report_invoice_document" inherit_id="account.document_tax_totals_template">
            <xpath expr="//tr[@class='border-black o_total']" position="after">
                <t t-if="docs[0]._name == 'sale.order'">
                    <div>
                        <div class="d-flex" style="padding-top: 3px">
                            <div>
                                <strong>Previous Balance</strong>
                            </div>
                            <div style="margin-left:220px">
                                <t t-esc="doc.previous_balance"
                                   t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </div>
                        </div>
                        <div class="d-flex" style="padding-top: 5px">
                            <div>
                                <strong>Payment Paid</strong>
                            </div>
                            <div style="margin-left:243px">
                                <t t-esc="doc.payment_paid"
                                   t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </div>
                        </div>
                        <div class="d-flex" style="padding-top: 5px">
                            <div>
                                <strong>Current Balance</strong>
                            </div>
                            <div style="margin-left:225px">
                                <t t-esc="doc.current_balance"
                                   t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-if="docs[0]._name == 'account.move'">
                    <div>
                        <div class="d-flex" style="padding-top: 3px">
                            <div>
                                <strong>Previous Balance</strong>
                            </div>
                            <div style="margin-left:160px">
                                <t t-esc="o.previous_balance"
                                   t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                        </div>
                        <div class="d-flex" style="padding-top: 5px">
                            <div>
                                <strong>Payment Paid</strong>
                            </div>
                            <div style="margin-left:183px">
                                <t t-esc="o.payment_paid"
                                   t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                        </div>
                        <div class="d-flex" style="padding-top: 5px">
                            <div>
                                <strong>Current Balance</strong>
                            </div>
                            <div style="margin-left:166px">
                                <t t-esc="o.current_balance"
                                   t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>